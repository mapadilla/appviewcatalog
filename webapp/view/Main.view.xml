<mvc:View controllerName="appviewcatalog.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:f="sap.f">
    <Page id="page" title="{i18n>title}">
        <content>
            <ScrollContainer width="100%" height="100%" vertical="true">
                <Panel headerText="Tipos de Vistas" class="sapUiMediumMargin" width="auto">
                    <f:GridContainer class="sapuiSmallMargin" items="{mTile>/TileCollection}">
                        <f:layout>
                            <f:GridContainerSettings rowSize="84px" columnSize="84px" gap="8px" />
                        </f:layout>
                        <f:layoutS>
                            <f:GridContainerSettings rowSize="70px" columnSize="70px" gap="4px" />
                        </f:layoutS>
                        <GenericTile header="{mTile>title}" press="onPressTile" headerImage="{mTile>icon}">
                            <layoutData>
				                <f:GridContainerItemLayoutData rows="2" columns="2" />
			                </layoutData>
                            <TileContent>
                                <Label text="{mTile>description}" wrapping="true" />
                            </TileContent>
                        </GenericTile>
                    </f:GridContainer>
                
            <!-- <VBox class="sapUiTinyMargin">
                <GenericTile header="Soy un Tile" press="onPressTile">
                    <TileContent>
                        <Label text="Soy la descripciÃ³n del tile" wrapping="true" />
                    </TileContent>
                </GenericTile>
            </VBox> -->

                </Panel>
            </ScrollContainer>
        </content>
    </Page>
</mvc:View>
